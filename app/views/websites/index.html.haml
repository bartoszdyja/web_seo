%h1 Websites
=form_for website do |f|                                                                                                                                                                      
  = render 'layouts/messages', object: f.object
  =f.text_field :name
  =f.button :submit  
%hr/
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Status
      %th Response time 
      %th Last update  
      %th Link   
  %tbody
    -websites.each do |w|
      %tr
        %td=w.name
        %td=w.responses.last.try(:readable_status)
        %td=w.responses.last.try(:response_time)
        %td=readable_time(w.responses.last.updated_at)
        %td=link_to 'Show', website_path(w)
